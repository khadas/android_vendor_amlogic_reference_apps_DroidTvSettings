// Classic DroidTvSettings
android_app {
    name: "DroidTvSettings",
    manifest: "AndroidManifest.xml",
    srcs: [
        "src/**/*.java",
        "src/**/I*.aidl",
    ],
    resource_dirs: ["res"],
    platform_apis: true,
    certificate: "platform",
    system_ext_specific: true,
    required: ["com.droidlogic.tv.settings"],
    optimize: {
        proguard_flags_files: ["proguard.cfg"],
    },
    privileged: true,
    static_libs: [
        "androidx.recyclerview_recyclerview",
        "androidx.preference_preference",
        "androidx.appcompat_appcompat",
        "androidx.legacy_legacy-preference-v14",
        "androidx.leanback_leanback-preference",
        "androidx.leanback_leanback",
        "androidx.lifecycle_lifecycle-extensions",
        "androidx.lifecycle_lifecycle-common-java8",
        "androidx.annotation_annotation",
        "guava",
        "statslog-tvsettings",
        "TwoPanelSettingsLib",
    ],

    libs: [
        "droidlogic",
        "droidlogic-tv",
    ],
}

// Classic DroidTvSettings
android_app {
    name: "DroidTvSettingsTwoPanel",
    manifest: "AndroidManifest.xml",
    srcs: [
        "src/**/*.java",
        "src/**/I*.aidl",
    ],
    resource_dirs: ["res-twopanel"],
    platform_apis: true,
    certificate: "platform",
    system_ext_specific: true,
    required: ["com.droidlogic.tv.settings"],
    optimize: {
        proguard_flags_files: ["proguard.cfg"],
    },
    privileged: true,
    static_libs: [
        "androidx.recyclerview_recyclerview",
        "androidx.preference_preference",
        "androidx.appcompat_appcompat",
        "androidx.legacy_legacy-preference-v14",
        "androidx.leanback_leanback-preference",
        "androidx.leanback_leanback",
        "androidx.lifecycle_lifecycle-extensions",
        "androidx.lifecycle_lifecycle-common-java8",
        "androidx.annotation_annotation",
        "guava",
        "statslog-tvsettings",
        "TwoPanelSettingsLib",
    ],

    libs: [
        "droidlogic",
        "droidlogic-tv",
    ],
}

prebuilt_etc {
    name: "com.droidlogic.tv.settings",
    system_ext_specific: true,
    sub_dir: "permissions",
    src: "com.droidlogic.tv.settings.xml",
    filename_from_src: true,
}
